---
import { getEntry } from "astro:content"
import Layout from "../../layouts/Layout.astro"

const entry = await getEntry({
	collection: "pages",
	slug: "posts",
})

const { Content } = await entry.render()
---

<Layout
	title={entry.data.title}
	description={entry.data.description}
	keywords={entry.data.keywords}
	image=`https://berzan.org/images/posts.jpg`
	url=`https://berzan.org/posts`
>
	<article
		class="prose w-full prose-invert prose-gray prose-code:font-['Commitmono',_monospace] prose-pre:rounded-sm prose-h1:font-bold prose-h2:font-bold prose-h3:font-semibold prose-a:text-cyan-400 prose-a:font-normal prose-ul:list-none prose-ul:px-0 prose-li:px-0"
	>
		<Content />
	</article>
</Layout>
